# 应用配置
APP_NAME=猫头鹰工厂
APP_VERSION=0.10.0
DEBUG=true
ENVIRONMENT=development

# 服务器配置
HOST=0.0.0.0
PORT=8000

# Supabase配置
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# JWT配置
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_very_long_and_random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 数据库配置（如果使用直连PostgreSQL）
# DATABASE_URL=postgresql://username:password@localhost:5432/owl_workshop

# Redis配置（可选）
# REDIS_URL=redis://localhost:6379/0

# 邮件配置（用于密码重置等）
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM_EMAIL=noreply@owl-workshop.com

# 文件存储配置
# UPLOAD_DIR=./uploads
# MAX_FILE_SIZE=100MB

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=owl_workshop.log

# 安全配置
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# GPU集群配置
DEFAULT_GPU_TIMEOUT=300
MAX_CONCURRENT_TASKS=10
TASK_RETRY_ATTEMPTS=3

# 充值配置
DEFAULT_RECHARGE_AMOUNT=100.0
MIN_RECHARGE_AMOUNT=10.0
MAX_RECHARGE_AMOUNT=10000.0

# 监控配置
MONITOR_INTERVAL=60
HEALTH_CHECK_TIMEOUT=30

# 维护模式
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=系统维护中，请稍后再试